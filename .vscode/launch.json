    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: nait",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.tox/local/bin/nait",
            "cwd": "${workspaceFolder}",
            "args": ["nanaimo_bar"],
            "justMyCode": false
        },
        {
            "name": "Pytest: current test",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}"],
            "console": "internalConsole",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Pytest: all tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["--log-cli-level=INFO"],
            "console": "internalConsole",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Pytest: stepwise",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "internalConsole",
            "cwd": "${workspaceFolder}",
            "args": ["--stepwise",
                     "--log-cli-level=INFO"],
            "justMyCode": false
        },
    ]
}