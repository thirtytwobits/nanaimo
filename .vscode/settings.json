{
    "reflow.preferredLineLength": 130,
    "python.pythonPath": ".pyenv/bin/python",
    "restructuredtext.sphinxBuildPath": "sphinx-build",
    "restructuredtext.confPath": "${workspaceFolder}",
    "restructuredtext.linter.extraArgs": [
        "--ignore D001"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.mypyEnabled": true,
    "python.linting.pep8Enabled": false,
    "python.linting.enabled": true,
    "python.linting.pep8Args": ["--ignore", "E501,E251,E701"],
    "python.testing.cwd": "${workspaceFolder}/test",
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.pytestEnabled": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.coverage.*": true,
        "**/__pycache__" : true,
        "**/.pytest_cache" : true,
        "**/*.egg-info": true
    },
    "cSpell.words": [
        "Buildkite",
        "Hookimpl",
        "KPIs",
        "Nanaimo",
        "Nanaimo's",
        "Segger",
        "Segger's",
        "TLYF",
        "argparse",
        "autoclass",
        "automethod",
        "automodule",
        "bkprecision",
        "bootloader",
        "bysource",
        "chdir",
        "cleandir",
        "ctypes",
        "functools",
        "functors",
        "getcwd",
        "globbing",
        "gtest",
        "imgmath",
        "jlink",
        "mkdir",
        "mkdtemp",
        "mypy",
        "nait",
        "nanaimo",
        "noqa",
        "ontarget",
        "pluggy",
        "pycache",
        "pyenv",
        "pypi",
        "pyserial",
        "pytest",
        "pytester",
        "rcfile",
        "rmtree",
        "sched",
        "shutil",
        "sonarcloud",
        "submodule",
        "toctree",
        "uart",
        "uploader",
        "virtualenv",
        "wchar",
        "xargs"
    ]
}